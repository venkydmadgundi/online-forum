<!DOCTYPE html>
<html>
  <head>
    <title>Online Forum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div>
      <% if current_user %>
        <div style='float: left;'>Logged in as <%= current_user.email %>.</div>
        <div style='float: right;'><%= link_to "Log Out", destroy_user_session_path, method: 'delete' %></div>
      <% else %>
        <%= link_to "Log In", new_user_session_path %>
      <% end %>
    </div>
    <br>
    <br>
    <hr>
    <%= yield %>
  </body>
</html>
